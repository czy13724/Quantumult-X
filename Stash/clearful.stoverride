name: |-
  clearful
desc: |-
  先开脚本再打开软件，未成功尝试恢复购买，下载地址请访问script-path链接获取。

http:

  mitm:
    - "api.revenuecat.com"

  script:  
  - match: ^https?:\/\/api\.revenuecat\.com\/v1\/(subscribers\/[^\/]+$|receipts$)
    name: clearful_81
    type: response
    require-body: true
    max-size: -1
    timeout: 60


script-providers:
  "clearful_81":
    url: https://raw.githubusercontent.com/czy13724/Quantumult-X/main/scripts/clearful.js
    interval: 86400

